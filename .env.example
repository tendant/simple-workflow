# Database Configuration for simple-workflow migrations
# Copy this file to .env and update with your database credentials

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database user
DB_USER=postgres

# Database password
DB_PASSWORD=postgres

# Database name
DB_NAME=workflow

# Schema name (creates tables in this schema)
DB_SCHEMA=workflow

# SSL mode (disable, require, verify-ca, verify-full)
DB_SSLMODE=disable
